# ================================================
# ENVIRONMENT VARIABLES FOR CLI APPLICATION
# ================================================
# Copy this file to .env and fill in your values

# -------------------- API Configuration --------------------
# API endpoint for web app integration
API_BASE_URL=https://js-stack.dev/api

# API Key for CLI authentication
CLI_API_KEY=your_cli_api_key_here

# -------------------- AI Integration --------------------
# Google AI (Gemini) API Key
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (alternative)
OPENAI_API_KEY=your_openai_api_key_here

# -------------------- GitHub Integration --------------------
# GitHub Personal Access Token
# Required for creating repositories and managing templates
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# GitHub username or organization
GITHUB_OWNER=your_github_username

# -------------------- NPM Configuration --------------------
# NPM Auth Token (for publishing packages)
NPM_TOKEN=your_npm_token_here

# NPM Registry URL (default: https://registry.npmjs.org/)
NPM_REGISTRY=https://registry.npmjs.org/

# -------------------- Analytics --------------------
# Enable anonymous usage analytics
ENABLE_ANALYTICS=true

# Analytics API endpoint
ANALYTICS_ENDPOINT=https://js-stack.dev/api/analytics

# -------------------- Template Sources --------------------
# Custom template repository
CUSTOM_TEMPLATE_REPO=https://github.com/yourusername/js-stack-templates

# Template cache directory
TEMPLATE_CACHE_DIR=~/.js-stack/templates

# -------------------- Development --------------------
# Debug mode
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# -------------------- Update Configuration --------------------
# Check for updates
CHECK_FOR_UPDATES=true

# Update check interval (in hours)
UPDATE_CHECK_INTERVAL=24

# -------------------- Proxy Configuration --------------------
# HTTP Proxy (if behind corporate firewall)
HTTP_PROXY=
HTTPS_PROXY=

# -------------------- Cache Configuration --------------------
# Cache directory
CACHE_DIR=~/.js-stack/cache

# Cache TTL (in seconds)
CACHE_TTL=3600

# -------------------- Feature Flags --------------------
# Enable experimental features
ENABLE_EXPERIMENTAL=false

# Enable AI suggestions
ENABLE_AI_SUGGESTIONS=true

# Enable auto-install
ENABLE_AUTO_INSTALL=true

# Enable progress animations
ENABLE_ANIMATIONS=true

# -------------------- Error Reporting --------------------
# Sentry DSN for error tracking
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# -------------------- Deployment Targets --------------------
# Vercel Token
VERCEL_TOKEN=your_vercel_token

# Netlify Token
NETLIFY_TOKEN=your_netlify_token

# Railway Token
RAILWAY_TOKEN=your_railway_token

# AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# -------------------- Telemetry --------------------
# Disable telemetry
DISABLE_TELEMETRY=false

# Telemetry endpoint
TELEMETRY_ENDPOINT=https://js-stack.dev/api/telemetry
