{
  "name": "create-js-stack",
  "version": "1.0.10",
  "description": "A powerful, modern CLI tool for scaffolding production-ready JavaScript full-stack projects with extensive customization options and best practices built-in.",
  "type": "module",
  "packageManager": "npm@10.0.0",
  "main": "dist/index.js",
  "bin": {
    "create-js-stack": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:cli": "echo 'Building CLI...' && node scripts/build.js || echo 'Build script not found'",
    "dev": "node src/cli.js",
    "test": "echo 'No tests configured'",
    "lint": "echo 'No linting configured'",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "rm -rf dist",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "prepare": "npx husky install 2>/dev/null || echo 'Husky not required for production'",
    "build:release": "echo 'Building CLI...' && node scripts/build.js",
    "publish:github": "powershell -ExecutionPolicy Bypass -File scripts/publish-github.ps1",
    "publish:github:bash": "bash scripts/publish-github.sh",
    "postinstall": "echo 'Installation complete!'"
  },
  "keywords": [
    "cli",
    "scaffolding",
    "javascript",
    "fullstack",
    "boilerplate",
    "generator",
    "react",
    "express",
    "nodejs"
  ],
  "author": "vipinyadav",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vipinyadav01/js-stack.git"
  },
  "bugs": {
    "url": "https://github.com/vipinyadav01/js-stack/issues"
  },
  "homepage": "https://github.com/vipinyadav01/js-stack#readme",
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "chalk-animation": "^2.0.3",
    "cli-spinners": "^2.9.2",
    "cli-table3": "^0.6.3",
    "commander": "^12.1.0",
    "execa": "^9.3.0",
    "figlet": "^1.7.0",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.2",
    "gradient-string": "^2.0.2",
    "handlebars": "^4.7.8",
    "nanospinner": "^1.1.0",
    "ora": "^8.0.1",
    "terminal-link": "^3.0.0",
    "validate-npm-package-name": "^5.0.1",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.5.4",
    "esbuild": "^0.23.1",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
