{
  "name": "create-js-stack",
  "version": "1.0.2",
  "description": "A modern CLI tool for scaffolding JavaScript full-stack projects",
  "type": "module",
  "packageManager": "npm@10.0.0",
  "main": "dist/index.js",
  "bin": {
    "create-js-stack": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "echo 'Building CLI...' && node scripts/build.js || echo 'Build script not found'",
    "build:cli": "echo 'Building CLI...' && node scripts/build.js || echo 'Build script not found'",
    "dev": "node src/cli.js",
    "dev:cli": "node src/cli.js",
    "test": "echo 'No tests specified'",
    "lint": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "npx husky install 2>/dev/null || echo 'Husky not required for production'",
    "release": "echo 'Building CLI...' && node scripts/build.js",
    "postinstall": "echo 'Installation complete!'"
  },
  "keywords": [
    "cli",
    "scaffolding",
    "javascript",
    "fullstack",
    "boilerplate",
    "generator",
    "react",
    "express",
    "nodejs"
  ],
  "author": "vipinyadav",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vipinyadav01/create-js-stack-cli.git"
  },
  "bugs": {
    "url": "https://github.com/vipinyadav01/create-js-stack-cli/issues"
  },
  "homepage": "https://github.com/vipinyadav01/create-js-stack-cli#readme",
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^9.3.0",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.2",
    "handlebars": "^4.7.8",
    "ora": "^8.0.1",
    "validate-npm-package-name": "^5.0.1",
    "yup": "^1.4.0",
    "gradient-string": "^2.0.2",
    "figlet": "^1.7.0",
    "boxen": "^7.1.1",
    "cli-table3": "^0.6.3",
    "terminal-link": "^3.0.0",
    "cli-spinners": "^2.9.2",
    "nanospinner": "^1.1.0",
    "chalk-animation": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "esbuild": "^0.23.1",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
